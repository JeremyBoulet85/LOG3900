<UserControl x:Class="PolyPaint.Controls.InvitedUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PolyPaint.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="You have been invited by: "/>
            <TextBlock Text="{Binding UserInvite}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Accept" Command="{Binding AcceptInviteCommand}"/>
            <Button Content="Decline" Command="{Binding DeclineInviteCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
