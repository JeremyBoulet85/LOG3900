<UserControl x:Class="PolyPaint.Controls.Chat.Channel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PolyPaint.Controls.Chat"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <!--active channel visual-->
            <ColumnDefinition Width="auto"/>
            <!-- Channel name-->
            <ColumnDefinition Width="auto"/>
            <!-- channel last content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="red" Width="10" Grid.Column="0" />
        <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="Canal général : "/>
        <TextBlock Grid.Column="2" Padding="5,10,0,10" FontSize="15" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="User 1 : Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent scelerisque scelerisque ligula ac sollicitudin. In felis elit, lacinia molestie lacus ut, pharetra faucibus est. Praesent varius, tellus viverra pharetra eleifend, purus ligula ornare dui"/>
    </Grid>
</UserControl>
