<UserControl x:Class="PolyPaint.Controls.Chat.MessageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PolyPaint.Controls.Chat"
             mc:Ignorable="d"
             d:DesignWidth="300">

    <Border Padding="8">
        <Grid HorizontalAlignment="Left">

            <StackPanel>
                <!-- Chat bubble -->
                <Border CornerRadius="10"
                    Padding="10"
                    Background="LightGreen">
                    
                    <!-- Message text -->
                    <TextBlock VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Foreground="Black"
                               Text="Sed ut perspiciatis undeSed ut perspiciatis undeSed ut perspiciatis undeSed ut perspiciatis undeSed ut perspiciatis undeSed ut perspiciatis unde "/>

                </Border>
                    
                <!-- Timestamp -->
                <TextBlock Text="11:54am"
                            Foreground="DarkGray"
                            HorizontalAlignment="Right"/>
                
            </StackPanel>

            
        </Grid>
    </Border>
</UserControl>
