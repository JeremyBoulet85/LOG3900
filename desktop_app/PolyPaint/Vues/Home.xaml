<Page x:Class="PolyPaint.Vues.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:PolyPaint.Vues"
      xmlns:localViewModel="clr-namespace:PolyPaint.VueModeles.Chat"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="Home">
    <Page.Resources>
        <localViewModel:MessageListViewModel x:Key="MessageListViewModel"/>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <local:Chat DataContext="{Binding Source={StaticResource MessageListViewModel}}" Width="500" x:Name="chatHome" Grid.Column="0" ></local:Chat>
        <local:Profile Grid.Column="1"/>
        <Button Width="50" Grid.Column="1" HorizontalAlignment="left" VerticalAlignment="Top" Click="Button_Click">
            <materialDesign:PackIcon Kind="DockWindow" Width="25" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Button>
        <Button Grid.Column="3" Margin="0,7,15,0" VerticalAlignment="top" HorizontalAlignment="Right" Command="{Binding DisconnectCommand}">
            <materialDesign:PackIcon Kind="PowerStandby" Width="25" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Button>
    </Grid>
</Page>
